<Page x:Class="KamilaFattakhova321_Pets.Pages.AutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KamilaFattakhova321_Pets.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutoPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Авторизация" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="LoginTextBox" Width="200" Margin="0,5,0,10"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,5,0,20"/>
            <Button Content="Войти" Width="100" Click="LoginButton_Click" HorizontalAlignment="Center"/>
            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" FontSize="14" Visibility="Collapsed" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
